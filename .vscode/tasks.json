{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "taskName": "cmake",
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Debug .."
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "make",
            "args": [
                "make -j 4"
            ],
            "isBuildCommand": true,
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}